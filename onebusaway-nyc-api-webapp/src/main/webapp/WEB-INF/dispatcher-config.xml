    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/" />
        <property name="suffix" value=".jsp" />
    </bean>



    <mvc:annotation-driven conversion-service="conversionService">
        <mvc:message-converters register-defaults="true">
            <bean class="org.onebusaway.api.web.mapping.serializers.json.JsonMessageConverter"/>
            <bean class="org.onebusaway.api.web.mapping.serializers.xml.XmlMessageConverter"/>
        </mvc:message-converters>
    </mvc:annotation-driven>


    <!-- Bean definition for FormattingConversionService -->
    <bean id="conversionService" class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
        <property name="formatters">
            <set>
                <bean class="org.onebusaway.api.web.mapping.formatting.NycDateConverterWrapper" />
                <bean class="org.onebusaway.api.web.mapping.formatting.NycDateTimeFormatter" />
            </set>
        </property>
        <property name="converters">
            <set>
                <bean class="org.onebusaway.api.web.mapping.converters.StringToLongConverter"/>
            </set>
        </property>
    </bean>

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <bean class="org.onebusaway.api.web.interceptors.ContentTypeHeaderInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>




