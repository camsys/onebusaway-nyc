        <profile>
          <id>local-multi-port</id>
          <properties>
                <db.driverClassName>org.hsqldb.jdbcDriver</db.driverClassName>
                <db.url>jdbc:hsqldb:file:${bundle.location}/org_onebusaway_database</db.url>
                <db.username>sa</db.username>
                <db.password />
